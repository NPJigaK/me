---
import { PUBLIC_GOOGLE_ADSENSE_CLIENT } from "astro:env/client";

export interface Props {
  slot?: string;
  class?: string;
  width?: string;
  height?: string;
}

const {
  slot = "",
  class: className = "",
  width = "",
  height = "",
} = Astro.props as Props;
---

{
  PUBLIC_GOOGLE_ADSENSE_CLIENT && slot && (
    <>
      <ins
        class:list={["adsbygoogle", className]}
        style={`display:block${width ? `;width:${width}` : ""}${
          height ? `;height:${height}` : ""
        }`}
        data-ad-client={PUBLIC_GOOGLE_ADSENSE_CLIENT}
        data-ad-slot={slot}
      />
      <script is:inline>
        (adsbygoogle = window.adsbygoogle || []).push({});
      </script>
    </>
  )
}
